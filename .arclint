{
  "exclude": [
    "(^package-lock.json$)"
  ],
  "linters": {
    "chmod": {
      "type": "chmod"
    },
    "filename": {
      "type": "filename"
    },
    "json": {
      "type": "json",
      "include": [
        "(\\.arcconfig$)",
        "(\\.arclint$)",
        "(\\.json$)"
      ]
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "nolint": {
      "type": "nolint"
    },
    "PHP Error Check": {
      "type": "php",
      "include": "(\\.php$)"
    },
    "spelling": {
      "type": "spelling"
    },
    "text": {
      "type": "text",
      "text.max-line-length": 80,
      "severity": {
        "2": "advice"
      }
    }
  }
}
